{
  "editor": {
  "backend": "tui-textarea"
},
  "keybindings": {
    "Home": {
      "<k>": "TableMoveUp",
      "<j>": "TableMoveDown",
      "<up>": "TableMoveUp",
      "<down>": "TableMoveDown",
      "<enter>": "LoadSelectedTable",
      "<tab>": "FocusQuery",
      "<Ctrl-q>": "Quit", // Quit the application
      "<Ctrl-d>": "Quit", // Another way to quit
      "<Ctrl-c>": "Quit", // Yet another way to quit
      "<Ctrl-z>": "Suspend" // Suspend the application
    },
    "Query": {
      "<Ctrl-y>": "ExecuteQuery", // Primary execute key
      "<Ctrl-enter>": "ExecuteQuery",
      "<F5>": "ExecuteQuery", // Alternative key for execute
      "<Ctrl-e>": "ExecuteQuery", // Another alternative
      "<Ctrl-u>": "ClearQuery", // Clear the query editor
      "<Ctrl-q>": "Quit", // Quit the application
      "<tab>": "FocusResults",
    },
    "Results": {
      "<k>": "RowMoveUp",
      "<j>": "RowMoveDown",
      "<h>": "ScrollTableLeft",
      "<l>": "ScrollTableRight",
      "<up>": "RowMoveUp",
      "<down>": "RowMoveDown",
      "<left>": "ScrollTableLeft",
      "<right>": "ScrollTableRight",
      "<enter>": "RowDetails",
      "<Ctrl-q>": "Quit", // Quit the application
      "<tab>": "FocusHome",
    }
  }
}
